pipeline{
    agent any

    tools {
        maven 'Maven 3'
    }

    stages{
        stage('check') {
            steps {
                git 'https://github.com/Kasanen/Week5Assignment.git'
            }
        }

        stage ('build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage ('Report') {
            steps {
                sh 'mvn jacoco:report'
            }
        }

        stage ('Publish Test Results') {
            steps {
                junit 'target/surefire-reports/*.xml'
            }
        }

        stage ('Publish Code Coverage') {
            steps {
                jacoco()
            }
        }
    }
}