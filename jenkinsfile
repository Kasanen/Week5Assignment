pipeline{
    agent any

    tools {
        maven 'maven-3.8.7'
    }

    stages{
        stage('check') {
            steps {
                git 'https://github.com/Kasanen/Week5Assignment.git'
            }
        }

        stage ('build') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage ('Report') {
            steps {
                sh 'mvn jacoco:report'
            }
        }
    }
}